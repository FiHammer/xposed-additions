<manifest xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" 
    package="com.spazedog.xposed.additionsgb" >
    
    <uses-permission android:name="net.dinglisch.android.tasker.PERMISSION_RUN_TASKS"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <uses-feature android:name="android.hardware.camera" />

    <!-- Cydia Substrate -->
    <uses-permission android:name="cydia.permission.SUBSTRATE"/>

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="Xposed Additions"
        android:theme="@style/App.Theme"
        tools:replace="android:label">

        <!-- Cydia Substrate -->
        <meta-data android:name="com.saurik.substrate.main" android:value="com.spazedog.xposed.additionsgb.backend.Injector"/>

        <!-- Xposed Framework -->
        <meta-data android:value="true" android:name="xposedmodule" />
        <meta-data android:value="30+" android:name="xposedminversion" />
        <meta-data android:value="Button Re-Mapping Engine" android:name="xposeddescription" />
        
        <service android:name=".ServiceTorch">
            <intent-filter>
                <action android:name="app.additionsgb.torch.service.TOGGLE" />
            </intent-filter>
        </service>
        
        <service android:name="com.spazedog.xposed.additionsgb.app.service.PreferenceService">
            <intent-filter>
                <action android:name="app.additionsgb.preferences.service.BIND" />
            </intent-filter>
        </service>
        
        <activity
            android:name="com.spazedog.xposed.additionsgb.app.ActivityMain">

            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
            
        </activity>
        
    </application>

</manifest>
