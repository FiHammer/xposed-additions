<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/App.ExpListView.Group"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/layoutMarginHorizontal"
    android:paddingTop="@dimen/layoutMarginVertical"
    android:paddingBottom="@dimen/layoutMarginVertical">

    <TextView
        android:id="@+id/display_usb_list_title_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/App.TextAppearance" />

    <TextView
        android:id="@+id/display_usb_list_summary_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/App.TextAppearance.Secondary.Small"/>

</LinearLayout>