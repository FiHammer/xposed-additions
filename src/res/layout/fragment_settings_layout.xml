<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:textFilterEnabled="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <!-- ================================================
                 Device Owner Settings
            ================================================ -->

            <android.support.v7.widget.CardView
                android:id="@+id/settings_owner_group"
                style="@style/App.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/App.CardView.Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_title_owner"/>

                    <RelativeLayout
                        android:id="@+id/settings_wrapper_debug"
                        style="@style/App.ContentPadding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/itemSelectableBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:id="@+id/settings_name_debug"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/App.TextAppearance"
                            android:text="@string/settings_name_owner_debug"/>

                        <TextView
                            android:id="@+id/settings_summary_debug"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/App.TextAppearance.Secondary.Small"
                            android:text="@string/settings_summary_owner_debug"
                            android:layout_below="@+id/settings_name_debug"/>

                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/settings_checkbox_debug"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:clickable="false"
                            android:layout_alignParentRight="true"
                            android:layout_alignBaseline="@+id/settings_name_debug"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/settings_wrapper_ownerlock"
                        style="@style/App.ContentPadding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/itemSelectableBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:id="@+id/settings_name_ownerlock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/App.TextAppearance"
                            android:text="@string/settings_name_owner_lock"/>

                        <TextView
                            android:id="@+id/settings_summary_ownerlock"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/App.TextAppearance.Secondary.Small"
                            android:text="@string/settings_summary_owner_lock"
                            android:layout_below="@+id/settings_name_ownerlock"/>

                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/settings_checkbox_ownerlock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:clickable="false"
                            android:layout_alignParentRight="true"
                            android:layout_alignBaseline="@+id/settings_name_ownerlock"/>

                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
