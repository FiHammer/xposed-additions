<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:textFilterEnabled="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <!-- ================================================
                 Device Owner Settings
            ================================================ -->

            <android.support.v7.widget.CardView
                android:id="@+id/settings_owner_group"
                style="@style/CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/CardViewTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_title_owner"/>


                    <!-- ================================================
                         Debug Settings
                    ================================================ -->

                    <include
                        layout="@layout/preference_expandable_list"
                        android:id="@+id/settings_debug_list"/>


                    <!-- ================================================
                         Owner Lock Settings
                    ================================================ -->

                    <include
                        layout="@layout/preference_checkbox"
                        android:id="@+id/settings_wrapper_ownerlock"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
