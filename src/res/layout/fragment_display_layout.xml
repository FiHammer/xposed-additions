<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:textFilterEnabled="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <!-- ================================================
                 Plug/Unplug Settings
            ================================================ -->

            <android.support.v7.widget.CardView
                style="@style/CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/CardViewTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/display_title_plug"/>

                    <include
                        layout="@layout/preference_expandable_list"
                        android:id="@+id/display_usb_list"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <!-- ================================================
                 Rotation Settings
            ================================================ -->

            <android.support.v7.widget.CardView
                style="@style/CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/CardViewTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/display_title_rotation"/>

                    <include
                        layout="@layout/preference_checkbox"
                        android:id="@+id/display_wrapper_rotation"/>

                    <include
                        layout="@layout/preference_button"
                        android:id="@+id/display_wrapper_rotation_blacklist"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <!-- ================================================
                 Launch Settings
            ================================================ -->

            <android.support.v7.widget.CardView
                style="@style/CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/CardViewTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/display_title_launch"/>

                    <include
                        layout="@layout/preference_button"
                        android:id="@+id/display_wrapper_launch_selection"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
