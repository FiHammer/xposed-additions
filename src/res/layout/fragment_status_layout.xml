<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:textFilterEnabled="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <!-- ================================================
                 Service Status
            ================================================ -->

            <android.support.v7.widget.CardView
                style="@style/App.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/App.CardView.Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/status_title_backend"/>

                    <TextView
                        style="@style/App.ContentPadding"
                        android:id="@+id/status_backend_service_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/App.TextAppearance.Small"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <!-- ================================================
                 Log Status
            ================================================ -->

            <android.support.v7.widget.CardView
                style="@style/App.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/App.CardView.Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/status_title_log"/>

                    <RelativeLayout
                        style="@style/App.ContentPadding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/status_log_errors"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/App.TextAppearance"
                            android:text="@string/status_log_errors"/>

                        <TextView
                            android:id="@+id/status_log_warnings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/App.TextAppearance"
                            android:text="@string/status_log_warnings"
                            android:layout_below="@+id/status_log_errors"/>

                        <TextView
                            android:id="@+id/status_log_errors_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/App.TextAppearance.Small"
                            android:textColor="@color/logColorError"
                            android:text="0"
                            android:layout_alignParentRight="true"
                            android:layout_alignBaseline="@+id/status_log_errors"/>

                        <TextView
                            android:id="@+id/status_log_warnings_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/App.TextAppearance.Small"
                            android:textColor="@color/logColorWarning"
                            android:text="0"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/status_log_errors_item"
                            android:layout_alignBaseline="@+id/status_log_warnings"/>

                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</FrameLayout>