<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="ActionBarTitle" parent="App.Theme">

        <item name="android:textColor">@color/textColorActionBar</item>
        <item name="android:textSize">@dimen/textSizeActionBar</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="ContentPadding" parent="App.Theme">

        <item name="android:paddingTop">@dimen/layoutMarginVertical</item>
        <item name="android:paddingBottom">@dimen/layoutMarginVertical</item>
        <item name="android:paddingLeft">@dimen/layoutMarginHorizontal</item>
        <item name="android:paddingRight">@dimen/layoutMarginHorizontal</item>

    </style>

    <style name="CardView" parent="App.Theme">

        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>

    </style>

    <style name="CardViewTitle" parent="ContentPadding">

        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textSizeTitle</item>
        <item name="android:textColor">@color/textColorAccent</item>

    </style>

    <style name="DialogTitle" parent="CardViewTitle"/>

</resources>
