<resources>

    <style name="App.ActionBar">
        <item name="android:layout_height">@dimen/actionBarHeight</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?attr/appColorPrimary</item>
        <item name="titleTextAppearance">@style/App.TextAppearance.Title.ActionBar</item>
    </style>

    <style name="App.TextAppearance" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">?attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>
    </style>

    <style name="App.TextAppearance.Small">
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <style name="App.TextAppearance.Inverted">
        <item name="android:textColor">?attr/textColorPrimaryInverted</item>
    </style>

    <style name="App.TextAppearance.Inverted.Small">
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <style name="App.TextAppearance.Secondary">
        <item name="android:textColor">?attr/textColorSecondary</item>
    </style>

    <style name="App.TextAppearance.Secondary.Small">
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <style name="App.TextAppearance.Secondary.Inverted">
        <item name="android:textColor">?attr/textColorSecondaryInverted</item>
    </style>

    <style name="App.TextAppearance.Secondary.Inverted.Small">
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <style name="App.TextAppearance.Title.ActionBar" parent="@style/App.TextAppearance.Inverted">
        <item name="android:textSize">@dimen/textSizeActionBar</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
