<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="App.ContentPadding">
        <item name="android:paddingTop">@dimen/layoutMarginVertical</item>
        <item name="android:paddingBottom">@dimen/layoutMarginVertical</item>
        <item name="android:paddingLeft">@dimen/layoutMarginHorizontal</item>
        <item name="android:paddingRight">@dimen/layoutMarginHorizontal</item>
    </style>

    <style name="App.ActionBar">
        <item name="android:layout_height">@dimen/actionBarHeight</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?attr/appColorPrimary</item>
        <item name="titleTextAppearance">@style/App.TextAppearance.Title.ActionBar</item>
    </style>

    <style name="App.CardView">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">7dp</item>
    </style>

    <style name="App.ExpListView">
        <item name="android:divider">@null</item>
        <item name="android:listSelector">?attr/itemSelectableBackground</item>
        <item name="android:groupIndicator">@drawable/listview_group_indicator</item>
        <item name="android:indicatorLeft">7dp</item>
    </style>

    <style name="App.ExpListView.Group" parent="App">
        <item name="android:paddingLeft">?android:attr/expandableListPreferredItemPaddingLeft</item>
    </style>

    <style name="App.ExpListView.Item" parent="App">
        <item name="android:paddingLeft">?android:attr/expandableListPreferredChildPaddingLeft</item>
    </style>

    <style name="App.CardView.Title" parent="App.ContentPadding">
        <item name="android:textAppearance">@style/App.TextAppearance.Secondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="App.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>
    </style>

    <style name="App.TextAppearance.Small">
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <style name="App.TextAppearance.Inverted">
        <item name="android:textColor">?attr/textColorPrimaryInverted</item>
    </style>

    <style name="App.TextAppearance.Inverted.Small">
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <style name="App.TextAppearance.Secondary">
        <item name="android:textColor">?attr/textColorSecondary</item>
    </style>

    <style name="App.TextAppearance.Secondary.Small">
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <style name="App.TextAppearance.Secondary.Inverted">
        <item name="android:textColor">?attr/textColorSecondaryInverted</item>
    </style>

    <style name="App.TextAppearance.Secondary.Inverted.Small">
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <style name="App.TextAppearance.Title.ActionBar" parent="App.TextAppearance.Inverted">
        <item name="android:textSize">@dimen/textSizeActionBar</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
